<% include ../header %>
    <header>
        <h2>Ntalk - Dados do contato</h2> 
    </header>
    <section>
        <form action="/contatos/<%- contato._id %>?_method=delete" method="post">
            <p>
                <label>Nome:</label>
                <%- contato.name %>
            </p>
            <p>
                <label>E-mail:</label>
                <%- contato.email %>
            </p>
            <p>
                <button type="submit">Excluir</button>
                <a href="/contatos/<%- contato._id %>/editar">Editar</a> 
            </p>
        </form>
    </section>
    <% include ../exit %>
        <% include ../footer %>
